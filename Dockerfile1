# First stage: Build
FROM node:13.12.0-alpine AS build
WORKDIR /app

COPY package.json .
COPY package-lock.json .

RUN npm install --silent

COPY public/ /app/public
COPY src/ /app/src

RUN npm run build

# Second stage: Deploy
FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
